<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.MainActivity">

    <com.bwie.majunbao.weiget.NoHuaDongFragment
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:id="@+id/fram"
        ></com.bwie.majunbao.weiget.NoHuaDongFragment>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/radio_group"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/rb1"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/selected_drawable_home"
            />
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/rb2"
            android:text=""
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/selected_drawable_find"

            />
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/rb3"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/selected_drawable_class"

            />
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/rb4"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/selected_drawable_cart"
            />
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/rb5"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/selected_drawable_my"
            />
    </RadioGroup>

</LinearLayout>