<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".ui.activity.LiuShiActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginBottom="20dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="0.1"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/a_4"
            android:id="@+id/sousuo"
            />
        <EditText
            android:id="@+id/edit_one"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="在千万海外商品中搜索"
            android:layout_marginLeft="20dp"
            android:clickable="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20dp"
            android:background="@drawable/suosuo"
            android:drawableRight="@drawable/root"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/one_tv_cancle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:clickable="true"
        android:textSize="18sp"
        android:gravity="center"
        android:text="取消"/>
</LinearLayout>
<!--2-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="40dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:textSize="20sp"
            android:gravity="left|center"
            android:textColor="#000000"
            android:text="热搜"
            />
    </LinearLayout>
    <HorizontalScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.example.library.AutoFlowLayout
            android:id="@+id/one_autoFlowLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </HorizontalScrollView>

</LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="20px"
    android:background="#cccccc"
    />
<!--2-->
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_marginBottom="20dp"
    android:layout_height="40dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:textSize="20sp"
        android:gravity="left|center"
        android:textColor="#000000"
        android:text="历史搜索"/>
</LinearLayout>
<com.example.library.AutoFlowLayout
    android:id="@+id/one_autoFlowLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
</LinearLayout>